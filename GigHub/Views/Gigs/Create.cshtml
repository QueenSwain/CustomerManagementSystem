@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Gig</h2>
@using (Html.BeginForm("Create", "Gigs")) //BeginForm() is an extension method for HtmlHelper which returns the response object or from submision.
{
    <p class="alert alert-info">All fields are <strong>Requried</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control",autofocus="autofocus"})
        @Html.ValidationMessageFor(m => m.Venue,"", new { @style = "color:red" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control",placeholder="eg 12/25/2019"})
        @Html.ValidationMessageFor(m => m.Date,"", new { @style = "color:red" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" ,placeholder = "eg 00:00" })
        @Html.ValidationMessageFor(m => m.Time, "",new { @style = "color:red" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select", new { @class = "form-control" })  <!--Source of data,to get values,argurment-->
        @Html.ValidationMessageFor(m => m.Genre,"", new { @style = "color:red" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>



}
<!--jqueryval comes after jquerybundle-->
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");

}

